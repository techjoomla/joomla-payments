<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="payment" method="upgrade">
	<name>Payment - PayU.</name>
	<author>Techjoomla</author>
	<creationDate>28th Aug 2013</creationDate>
	<copyright></copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>0.1</version>
	<description>PayU payment plugin</description>
	<files>
		<filename plugin="payu">payu.php</filename>
		<folder>payu</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_payment_payu.ini</language>
	</languages>

	<!-- Fields for Joomla 1.6.x and onwards -->
 	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_name" type="text" default="Payu Credit Card/Debit Card/Net Banking" label="PLG_PAYMENT_PAYU_PLG_NAME" description="PLG_PAYMENT_PAYU_PLG_DESC" />
				<field name="key" type="text" default="" label="PLG_PAYMENT_PAYU_EMAIL" description="PLG_PAYMENT_PAYU_EMAIL_DESC"/>
				<field name="salt" type="text" default="" label="PLG_PAYMENT_PAYU_SALT" description="PLG_PAYMENT_PAYU_SALT_DESC"/>
					<field name="sandbox" type="radio" default="0" label="PLG_PAYMENT_PAYU_SANDBOX" description="PLG_PAYMENT_PAYU_SANDBOX_DESC">
					<option value="0">PLG_PAYMENT_PAYU_NO</option>
					<option value="1">PLG_PAYMENT_PAYU_YES</option>
				</field>
				<field name="log_write" type="radio" default="0" label="PLG_PAYMENT_PAYU_WRITE_LOG"	description="PLG_PAYMENT_PAYU_WRITE_LOG_DESC">
					<option value="0">PLG_PAYMENT_PAYU_NO</option>
					<option value="1">PLG_PAYMENT_PAYU_YES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
