	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0</version>
	<description>eWallet payment plugin</description>
	<files>
		<filename plugin="ewallet">ewallet.php</filename>
		<folder>ewallet</folder>
	</files>
		<languages> 
			<language tag="en-GB">en-GB/en-GB.plg_payment_ewallet.ini</language>
  	</languages>

	<!-- Fields for Joomla 1.6.x and onwards -->
