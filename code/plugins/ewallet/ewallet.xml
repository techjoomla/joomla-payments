		<fields name="params">
			<fieldset name="basic" label="Plugin Parameters" addfieldpath="">
			<field name="conversion" type="text" size="10" default="10" label="CON_AMT" description="CON_AMT_DESC"/>
			<field name="plugin_name" type="text" default="ewallet" label="PLG_NAME" description="" />
