<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="payment" method="upgrade">
	<name>Pay By Cheque</name>
	<author>TechJoomla</author>
	<creationDate>31st Aug 2013</creationDate>
	<copyright>Techjoomla. All Rights Reserved.</copyright>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>http://www.techjoomla.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>2.0.1</version>
	<description>PayBy cheque plugin from Techjoomla. </description>
	<files>
		<filename plugin="bycheck">bycheck.php</filename>
				<folder>bycheck</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_payment_bycheck.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_payment_bycheck.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_payment_bycheck.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_payment_bycheck.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.plg_payment_bycheck.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_payment_bycheck.ini</language>
		<language tag="da-DK">da-DK/da-DK.plg_payment_bycheck.ini</language>
		<language tag="th-TH">th-TH/th-TH.plg_payment_bycheck.ini</language>
		<language tag="pt-PT">pt-PT/pt-PT.plg_payment_bycheck.ini</language>
	</languages>
	<!-- parameters for Joomla 1.5.x -->
	<params>
		<param name="plugin_name" type="text" default="PayBy Check" label="PLG_NAME" description="" />
		<param name="plugin_mail" type="textarea" default="" label="PLG_MAIL" description="PLG_MAIL_DES" rows="5" cols="20"  />
	</params>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
					<field name="plugin_name" type="text" default="PayBy Check" label="PLG_NAME" description="" />
					<field name="acc_holder_name" type="text" default="" label="PLG_ACC_HOLDER_NAME" description="PLG_CHEQUE_WRITE_LOG_NAME" />
					<field name="acc_details" type="textarea" default="" label="PLG_ACC_DETAILS" description="PLG_CHEQUE_WRITE_LOG_DETAILS" rows="5" cols="20"  />
					<field name="plugin_mail" type="textarea" default="" label="PLG_MAIL" description="PLG_MAIL_DES" rows="5" cols="20"  />
					<field name="log_write" type="radio" default="0" label="PLG_CHEQUE_WRITE_LOG"	description="PLG_CHEQUE_WRITE_LOG_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</field>
			</fieldset>
		</fields>
	</config>
</extension>
