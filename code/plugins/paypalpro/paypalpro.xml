		<params>  		
  		<param name="pro_api_username" type="text" default="" label="PAYPALPRO_USERNAME" description="PAYPALPRO_USERNAME_DESC"/>  
			<param name="pro_api_signature" type="text" default="" label="PAYPALPRO_SIGN" description="PAYPALPRO_SIGN_DESC"/>  
			<param name="pro_api_password" type="text" default="" label="PAYPALPRO_PWD" description="PAYPALPRO_PWD_DESC"/>  
			<param name="sandbox" type="radio" default="0" label="PAYPALPRO_SANDBOX" description="PAYPALPRO_SANDBOX_DESC">
				<option value="0">NO</option>
				<option value="1">YES</option>
			</param>
			<param name="plugin_name" type="text" default="PaypalPro" label="PLG_NAME" description="" />
			<param name="plugin_hidname" type="hidden" default="paypalpro" />
	</params>
	
	<!-- Fields for Joomla 1.6.x and onwards -->
 	<config>
		<fields name="params">
			<fieldset name="basic">
			<field name="pro_api_username" type="text" default="" label="PAYPALPRO_USERNAME" description="PAYPALPRO_USERNAME_DESC"/>  
			<field name="pro_api_signature" type="text" default="" label="PAYPALPRO_SIGN" description="PAYPALPRO_SIGN_DESC"/>  
			<field name="pro_api_password" type="text" default="" label="PAYPALPRO_PWD" description="PAYPALPRO_PWD_DESC"/>  
						<field name="sandbox" type="radio" default="0" label="PAYPALPRO_SANDBOX" description="PAYPALPRO_SANDBOX_DESC">
						<option value="0">NO</option>
						<option value="1">YES</option>
						</field>
						<field name="plugin_name" type="text" default="Paypalpro" label="PLG_NAME" description="" />
						<field name="plugin_hidname" type="hidden" default="paypalpro" />
				</fieldset>			
			
		</fields>
	</config>
