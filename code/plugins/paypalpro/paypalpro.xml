	<description>paypalpro payment plugin for jticketing</description>
	<files>
		<filename plugin="paypalpro">paypalpro.php</filename>
		<folder>paypalpro</folder>
	</files>
	<languages> 
		<language tag="en-GB">en-GB/en-GB.plg_payment_paypalpro.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.plg_payment_paypalpro.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_payment_paypalpro.ini</language>
