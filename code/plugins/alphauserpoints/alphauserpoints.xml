<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="payment" method="upgrade">
	<name>Payment - Alphauser Points</name>

	<author>TechJoomla</author>
	<copyright>Techjoomla. All Rights Reserved.</copyright>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>http://www.techjoomla.com</authorUrl>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<creationDate>28th Aug 2013</creationDate>
	<version>2.0</version>

	<description>alphauserpoints payment plugin</description>

	<files>
		<filename plugin="alphauserpoints">alphauserpoints.php</filename>
		<folder>alphauserpoints</folder>
	</files>

	<languages>
		<language tag="en-GB">en-GB/en-GB.plg_payment_alphauserpoints.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_payment_alphauserpoints.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_payment_alphauserpoints.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_payment_alphauserpoints.ini</language>
		<language tag="sv-SE">sv-SE/sv-SE.plg_payment_alphauserpoints.ini</language>
		<language tag="nl-NL">nl-NL/nl-NL.plg_payment_alphauserpoints.ini</language>
		<language tag="da-DK">da-DK/da-DK.plg_payment_alphauserpoints.ini</language>
		<language tag="th-TH">th-TH/th-TH.plg_payment_alphauserpoints.ini</language>
		<language tag="pt-PT">pt-PT/pt-PT.plg_payment_alphauserpoints.ini</language>
	</languages>

	<config name="params">
		<fields name="params">
				<fieldset name="basic" label="Plugin Parameters" addfieldpath="/plugins/payment/alphauserpoints/alphauserpoints/element">
				<field name="conversion" type="text" size="10" default="10" label="CON_AMT" description="CON_AMT_DESC"/>
				<field name="points" type="hidden" default="point"/>
				<field name="aupfilesocialads" type="aupfilesocialads" label="AUP_FILE_SA" description="DESC_AUP_FILE" />
				<field name="aupfilequick2cart" type="aupfilequick2cart" label="PLG_PAYMENT_ALPHAUSERPOINTS_QUICK2CART" description="PLG_PAYMENT_ALPHAUSERPOINTS_QUICK2CART_LINK" />
				<field name="aupfilesjticketing" type="aupfilesjticketing" label="AUP_FILE_JT" description="DESC_AUP_FILE" />
				<!--<field name="aupfilesocialads" type="aupfilesocialads" label="AUP_FILE_SA" description="DESC_AUP_FILE" />
				-->
				<field name="log_write" type="radio" default="0" label="PLG_APOINT_WRITE_LOG"	description="PLG_APOINT_WRITE_LOG_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="plugin_name" type="text" default="Alphauser Points" label="PLG_NAME" description="" />
				<field name="plugin_hidname" type="hidden" default="alphauserpoints" />
			</fieldset>
		</fields>
	</config>

</extension>
