<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="payment" method="upgrade">
	<name>Payment - eway rapid 3.0</name>
	<author>Techjoomla</author>
	<creationDate>28th Aug 2013</creationDate>
	<copyright></copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>0.1</version>
	<description>eway rapid 3.0 payment plugin</description>
	<files>
		<filename plugin="ewayrapid3">ewayrapid3.php</filename>
		<folder>ewayrapid3</folder>
	</files>
	<languages> 
		<language tag="en-GB">en-GB/en-GB.plg_payment_ewayrapid3.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_payment_ewayrapid3.sys.ini</language>
		
	</languages>
	
	<!-- Fields for Joomla 1.6.x and onwards -->

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="plugin_name" type="text" size="50" default="" label="PLG_PAYMENT_EWAYRAPID3_TITLE_LABEL" description="PLG_PAYMENT_EWAYRAPID3_TITLE_DESC"/>
				<field name="ppimage" type="text" size="50" default="" label="PLG_PAYMENT_EWAYRAPID3_PPIMAGE_LABEL" description="PLG_PAYMENT_EWAYRAPID3_PPIMAGE_DESC" />
				
	
				<field type="spacer" />
				<field name="key" type="text" size="50" default="" label="PLG_PAYMENT_EWAYRAPID3_KEY_LABEL" description="PLG_PAYMENT_EWAYRAPID3_KEY_DESC"/>
				<field name="password" type="text" size="50" default="" label="PLG_PAYMENT_EWAYRAPID3_PASSWORD_LABEL" description="PLG_PAYMENT_EWAYRAPID3_PASSWORD_DESC"/>
				<field type="spacer" />
				<field name="sb_key" type="text" size="50" default="" label="PLG_PAYMENT_EWAYRAPID3_SB_KEY_LABEL" description="PLG_PAYMENT_EWAYRAPID3_SB_KEY_DESC"/>
				<field name="sb_password" type="text" size="50" default="" label="PLG_PAYMENT_EWAYRAPID3_SB_PASSWORD_LABEL" description="PLG_PAYMENT_EWAYRAPID3_SB_PASSWORD_DESC"/>
				<field type="spacer" />
				<field name="sandbox" type="radio" default="0" label="PLG_PAYMENT_CLICKANDBUY_SANDBOX_LABEL" description="PLG_PAYMENT_CLICKANDBUY_SANDBOX_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				
			</fieldset>
		</fields>
	</config>
	
</extension>
